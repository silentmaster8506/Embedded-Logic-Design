/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include <stdlib.h>
#include <complex.h>

#define SIZE 8

const int bit_rev[8]={0, 4, 2, 6, 1, 5, 3, 7};
const float complex twiddle[SIZE/2]={1.0+0*I, 0.7071067811865475-0.7071067811865475*I, 0.0-1*I, -0.7071067811865475-0.7071067811865476*I};

void reorder(float complex arr_in[SIZE], float complex arr_out[SIZE])
{
    for (int i = 0; i < SIZE; i++)
    {
        arr_out[i] = arr_in[bit_rev[i]];
    }
}

void fft_process(float complex data_in[SIZE], float complex data_out[SIZE])
{
    float complex buf1[SIZE], buf2[SIZE];
    for (int i=0; i<SIZE; i+=2)
    {
        buf1[i]=data_in[i]+data_in[i+1];
        buf1[i+1]=data_in[i]-data_in[i+1];
    }

    for (int i = 0; i < SIZE; i += 4)
    {
        for (int j=0; j<2; j++)
        {
            buf2[i+j]=buf1[i+j]+twiddle[2*j]*buf1[i+j+2];
            buf2[i+j+2]=buf1[i+j]-twiddle[2*j]*buf1[i+j+2];
        }
    }

    for (int i=0; i<SIZE/2; i+=4)
    {
        data_out[i]=buf2[i]+twiddle[i]*buf2[i+4];
        data_out[i+4]=buf2[i]-twiddle[i]*buf2[i+4];
    }
}

int main()
{
    const float complex data_in[SIZE]={5+3*I, 8+2*I, 4+9*I, 6+1*I, 7+5*I, 9+8*I, 2+4*I, 3+7*I};

    float complex data_out[SIZE];
    float complex data_reordered[SIZE];

    reorder(data_in, data_reordered);
    fft_process(data_reordered, data_out);

    printf("\nInput Data:\n");
    for (int i=0; i<SIZE; i++)
    {
        printf("%f %f\n", crealf(data_in[i]), cimagf(data_in[i]));
    }

    printf("\nFFT Output:\n");
    for (int i=0; i<SIZE; i++)
    {
        printf("%f %f\n", crealf(data_out[i]), cimagf(data_out[i]));
    }

    return 0;
}

