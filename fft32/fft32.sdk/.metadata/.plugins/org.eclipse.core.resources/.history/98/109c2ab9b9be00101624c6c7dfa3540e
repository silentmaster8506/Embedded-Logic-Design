/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include <complex.h>
#include <stdlib.h>
#include <math.h>
#include "platform.h"
#include "xil_printf.h"
#include <xtime_l.h>
#include "xparameters.h"
#include "xaxidma.h"
#include "dma_init.h"

#define N 32
#define PI 3.14159265358979323846

// Bit reversal for 32-point FFT
const int rev32[N] = {
	0,16,8,24,4,20,12,28,
	2,18,10,26,6,22,14,30,
	1,17,9,25,5,21,13,29,
	3,19,11,27,7,23,15,31
};

// Twiddle factors for 32-point FFT
const float complex W[N/2] = {
    1.0000000+0.0000000*I, 0.9807853-0.1950903*I, 0.9238795-0.3826834*I, 0.8314696-0.5555702*I,
    0.7071068-0.7071068*I, 0.5555702-0.8314696*I, 0.3826834-0.9238795*I, 0.1950903-0.9807853*I,
    0.0000000-1.0000000*I, -0.1950903-0.9807853*I, -0.3826834-0.9238795*I, -0.5555702-0.8314696*I,
    -0.7071068-0.7071068*I, -0.8314696-0.5555702*I, -0.9238795-0.3826834*I, -0.9807853-0.1950903*I
};

void bitreverse(float complex dataIn[N], float complex dataOut[N]) {
	bit_reversal: for(int i=0; i<N; i++) {
		dataOut[i] = dataIn[rev32[i]];
	}
}

void FFT_stages(float complex FFT_input[N], float complex FFT_output[N]) {
	float complex temp1[N], temp2[N], temp3[N], temp4[N], temp5[N];

	// Stage 1: butterfly size 2
	stage1: for(int i=0; i<N; i+=2) {
		temp1[i] = FFT_input[i] + FFT_input[i+1];
		temp1[i+1] = FFT_input[i] - FFT_input[i+1];
	}

	// Stage 2: butterfly size 4
	stage2: for(int i=0; i<N; i+=4) {
		for(int j=0; j<2; ++j) {
			temp2[i+j] = temp1[i+j] + W[(N/4)*j/2]*temp1[i+j+2];
			temp2[i+j+2] = temp1[i+j] - W[(N/4)*j/2]*temp1[i+j+2];
		}
	}

	// Stage 3: butterfly size 8
	stage3: for(int i=0; i<N; i+=8) {
		for(int j=0; j<4; ++j) {
			temp3[i+j] = temp2[i+j] + W[j*(N/8)/4]*temp2[i+j+4];
			temp3[i+j+4] = temp2[i+j] - W[j*(N/8)/4]*temp2[i+j+4];
		}
	}

	// Stage 4: butterfly size 16
	stage4: for(int i=0; i<N; i+=16) {
		for(int j=0; j<8; ++j) {
			temp4[i+j] = temp3[i+j] + W[j*2]*temp3[i+j+8];
			temp4[i+j+8] = temp3[i+j] - W[j*2]*temp3[i+j+8];
		}
	}

	// Stage 5: butterfly size 32
	stage5: for(int i=0; i<N/2; i+=1) {
		FFT_output[i] = temp4[i] + W[i]*temp4[i+16];
		FFT_output[i+16] = temp4[i] - W[i]*temp4[i+16];
	}

	// Your original final reciprocal normalization (kept intact)
	for(int i=0; i<N; i+=1) {
		FFT_output[i] = 1/crealf(FFT_output[i]) + I*1/cimagf(FFT_output[i]);
	}
}

int main() {
	init_platform();

	XTime PL_start_time, PL_end_time;
	XTime PS_start_time, PS_end_time;

	const float complex FFT_input[N] = {
		11+23*I,32+10*I,91+94*I,15+69*I,47+96*I,44+12*I,96+17*I,49+58*I,
		18+33*I,27+47*I,51+19*I,29+39*I,34+90*I,73+25*I,45+37*I,87+58*I,
		61+73*I,52+29*I,48+57*I,30+18*I,92+41*I,56+83*I,27+61*I,66+10*I,
		15+53*I,23+80*I,78+34*I,41+90*I,12+48*I,20+21*I,71+25*I,37+66*I
	};

	float complex FFT_output_sw[N], FFT_output_hw[N];
	float complex FFT_rev_sw[N];

	///////////// Software 32-point FFT
	XTime_SetTime(0);
	XTime_GetTime(&PS_start_time);
	bitreverse(FFT_input, FFT_rev_sw);
	FFT_stages(FFT_rev_sw, FFT_output_sw);
	XTime_GetTime(&PS_end_time);

	//////////// Hardware 32-point FFT (DMA code to be added)
	// Write the code for DMA configuration and polling


	/////////// Verifying Hardware result with Software
	/* for(int i=0; i<N; i++) {
		printf("\n\rPS Output- %f+%fI, PL Output- %f+%fI",
